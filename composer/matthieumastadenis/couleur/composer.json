{
    "name"        : "matthieumastadenis/couleur",
    "description" : "A modern PHP 8.1+ color library, compatible with CSS Color Module Level 4",
    "type"        : "library",
    "license"     : "MIT",
    "authors"     : [
        {
            "name"  : "Matthieu Masta Denis",
            "email" : "matthieu.denis@abitus.net"
        }
    ],
    "require": {
        "php" : "~8.1"
    },
